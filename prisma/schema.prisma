// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  questionnaires Questionnaire[]
  plans          NutritionPlan[]
  generationJobs GenerationJob[]
  progressCheckIns ProgressCheckIn[]
  accounts       Account[]
  sessions       Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Questionnaire {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  version       Int      @default(1)
  status        String   @default("active") // active|archived
  answers       Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  plans         NutritionPlan[]
}

model NutritionPlan {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionnaireId  String
  questionnaire    Questionnaire @relation(fields: [questionnaireId], references: [id], onDelete: Cascade)
  version          Int      @default(1)
  title            String
  status           String   @default("generating") // generating|ready|failed
  markdown         String?  @db.Text
  derivedTargets   Json
  llmModel         String?
  llmPromptHash    String?
  error            String?
  validationIssues Json?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  gammaGeneration  GammaGeneration?
  generationJobs   GenerationJob[]

  @@index([userId, createdAt])
}

model GammaGeneration {
  id              String   @id @default(cuid())
  nutritionPlanId String   @unique
  nutritionPlan   NutritionPlan @relation(fields: [nutritionPlanId], references: [id], onDelete: Cascade)
  status          String   @default("queued") // queued|pending|completed|failed
  generationId    String?
  gammaUrl        String?
  lastPayload     Json?
  error           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model GenerationJob {
  id              String   @id @default(cuid())
  jobKey          String   @unique
  type            String
  status          String   @default("queued") // queued|running|retryable|completed|failed
  payload         Json
  attempts        Int      @default(0)
  maxAttempts     Int      @default(5)
  runAfter        DateTime @default(now())
  leaseUntil      DateTime?
  lastError       String?
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  nutritionPlanId String?
  nutritionPlan   NutritionPlan? @relation(fields: [nutritionPlanId], references: [id], onDelete: SetNull)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([status, runAfter])
  @@index([userId, createdAt])
}

model ProgressCheckIn {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  checkInDate      String   // YYYY-MM-DD in user's local timezone
  timezone         String
  weightKg         Float?
  adherencePercent Int
  notes            String?  @db.Text
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([userId, checkInDate])
  @@index([userId, checkInDate])
}

model ApiRateLimit {
  id            String   @id @default(cuid())
  key           String   @unique
  route         String
  userId        String?
  windowStart   DateTime
  windowSeconds Int
  count         Int      @default(1)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([route, windowStart])
  @@index([userId, route, windowStart])
}
